{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "projection": {
    "type": "equalEarth"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/ongzn/FIT3179-Week-9-Homework/refs/heads/main/js/ne_110m_admin_0_countries.json",
    "format": {
      "type": "topojson", 
      "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME_EN",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/ongzn/FIT3179-Week-9-Homework/refs/heads/main/data/smoking_death_rate.csv"
        },
        "key": "Entity",
        "fields": ["Smoking mortality"]
      }
    },
    {
      "calculate": "replace(datum['Smoking mortality'], /\\./g, '')",
      "as": "Smoking mortality"
    }
  ],
  "mark": "geoshape",
  "encoding": {
    "color": {
      "field": "Smoking mortality",
      "type": "quantitative",
      "scale": {
        "scheme": "reds"
      }
    },
    "tooltip": [
      {"field": "properties.NAME_EN", "type": "nominal", "title": "Country"},
      {"field": "Smoking mortality", "type": "quantitative", "title": "Smoking Mortality"}
    ]
  }
}